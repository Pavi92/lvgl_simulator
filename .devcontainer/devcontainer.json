	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},

	"mounts": [
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		}
	],

	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	}

